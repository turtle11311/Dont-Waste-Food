<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.dwf.dontwastefood.CustomerMemberCentreFragment">

    <ImageView
        android:id="@+id/HeadPicture"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        app:srcCompat="?attr/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <Button
                android:id="@+id/asdf"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="我的訂單"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp" />

            <Space
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/CheckBill"
                android:layout_gravity="center"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="訂單紀錄"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_menu_black_24dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_credit_card_black_24dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_package_black_24dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_truck_24dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="45dp"
                    android:layout_height="42dp"
                    app:srcCompat="@drawable/ic_happy_face_black_24dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部訂單"
                    android:textAlignment="center" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待付款"
                    android:textAlignment="center" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待出貨"
                    android:textAlignment="center" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待收貨"
                    android:textAlignment="center" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回饋"
                    android:textAlignment="center" />

            </TableRow>

        </TableLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35sp">

            <Space
                android:layout_width="10sp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="35sp"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <Space
                android:layout_width="20sp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/profile"
                android:layout_width="250sp"
                android:layout_height="match_parent"
                android:fontFamily="cursive"
                android:text="個人檔案"
                android:gravity="center_vertical"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/aboutMe"
                android:layout_width="wrap_content"
                android:layout_height="36sp"
                android:background="@android:color/transparent"
                android:text=">"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35sp">

            <Space
                android:layout_width="10dp"
                android:layout_height="35dp" />

            <ImageView
                android:id="@+id/ystar"
                android:layout_width="35sp"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <Space
                android:layout_width="20dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:fontFamily="cursive"
                android:lineSpacingExtra="12sp"
                android:text="我的收藏"
                android:gravity="center_vertical"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/pro_favorite"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:text=">"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35sp">

            <Space
                android:layout_width="10dp"
                android:layout_height="35dp" />

            <ImageView
                android:id="@+id/time"
                android:layout_width="35dp"
                android:layout_height="32dp"
                app:srcCompat="@android:drawable/presence_away" />

            <Space
                android:layout_width="20dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:fontFamily="cursive"
                android:lineSpacingExtra="12sp"
                android:text="瀏覽紀錄"
                android:gravity="center_vertical"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/pro_history"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:text=">"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35sp">

            <Space
                android:layout_width="10dp"
                android:layout_height="35dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="35sp"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

            <Space
                android:layout_width="20dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:fontFamily="cursive"
                android:lineSpacingExtra="12sp"
                android:text="幫助中心"
                android:gravity="center_vertical"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/pro_help"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:text=">"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="10dp"
                android:layout_height="35dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="35sp"
                android:layout_height="36sp"
                app:srcCompat="@drawable/ic_people_black_24dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:lineSpacingExtra="12sp"
                android:text="關於我們"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/pro_aboutteam"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:text=">"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </TableRow>
    </LinearLayout>
</LinearLayout>
